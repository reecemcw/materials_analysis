{
  "name": "materials_analysis_app",
  "version": "1.0.0",
  "description": "NodeJS App which (ethically) scrapes materials analysis articles, stores article data, generates metadata, and allows the user to query the database with natural language effectively with RAG. ",
  "main": "index.js",
  "scripts": {
    "install:all": "npm install && npm run install:services",
    "install:services": "npm install --workspaces",
    "test": "cd tests && node workflow.mjs",
    "test-pipeline": "cd tests && node test-pipeline.mjs",
    "start": "node index.js",
    "dev": "nodemon index.js",
    "dev:scraper": "cd services/scraper && nodemon server.js",
    "dev:frontend": "cd services/frontend && nodemon src/server.js",
    "dev:labeller": "cd services/labeller && nodemon src/server.js",
    "dev:kg": "cd services/knowledge-graph && nodemon src/server.js",
    "diagnose-frontend": "node scripts/diagnose-frontend.mjs"
  },
  "workspaces": [
    "services/*"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/reecemcw/materials_analysis.git"
  },
  "keywords": [
    "materials",
    "analysis",
    "rag",
    "ai",
    "llm",
    "metatagging",
    "scrape"
  ],
  "author": "Reece McWalter",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/reecemcw/materials_analysis/issues"
  },
  "homepage": "https://github.com/reecemcw/materials_analysis#readme",
  "type": "module",
  "dependencies": {
    "express": "^5.2.1",
    "axios": "^1.6.0",
    "dotenv": "^16.3.1",
    "nodemon": "^3.0.2"

  },
    "devDependencies": {
    "concurrently": "^8.2.2",
    "prettier": "^3.1.1",
    "eslint": "^8.55.0"
  },
  "engines": {
    "node": ">=18.0.0",
    "npm": ">=9.0.0"
  }
}
